<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/screen_margin">


    <ImageView
        android:id="@+id/imageview_recyclerview_priority"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/shape_high_priority" />
    <TextView
        android:id="@+id/textview_recyclerview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imageview_recyclerview_priority"
        android:layout_alignTop="@id/imageview_recyclerview_priority"
        android:layout_alignEnd="@id/imageview_recyclerview_priority"
        android:layout_alignBottom="@id/imageview_recyclerview_priority"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="26.Apr" />

    <LinearLayout
        android:layout_toEndOf="@+id/imageview_recyclerview_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/screen_margin"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/textview_recyclerview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Lorem ipsum"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textview_recyclerview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lorem ipsum is simply dummy text" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageview_recyclerview_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true" />


</RelativeLayout>