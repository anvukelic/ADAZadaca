<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/screen_margin">

    <ImageView
        android:id="@+id/imageview_recyclerview_priority"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/shape_high_priority"
        android:contentDescription="@string/task_priority" />
    <TextView
        android:id="@+id/textview_recyclerview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imageview_recyclerview_priority"
        android:layout_alignTop="@id/imageview_recyclerview_priority"
        android:layout_alignEnd="@id/imageview_recyclerview_priority"
        android:layout_alignBottom="@id/imageview_recyclerview_priority"
        android:gravity="center"
        android:textColor="@color/colorTaskDate"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="26.Apr" />

    <LinearLayout
        android:id="@+id/linearlayout_text_container"
        android:layout_toEndOf="@+id/imageview_recyclerview_priority"
        android:layout_toStartOf="@+id/switch_recyclerview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/screen_margin"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/textview_recyclerview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lorem ipsum"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textview_recyclerview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lorem ipsum is simply dummy text" />
    </LinearLayout>
    <Switch
        android:id="@+id/switch_recyclerview_status"
        android:switchMinWidth="50dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textOn="@string/done"
        android:textOff="@string/not_done"/>

</RelativeLayout>